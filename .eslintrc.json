{
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"extends": [
		"plugin:vue/recommended"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"vue"
	],
	"rules": {
		"no-tabs": 0,
		"indent": [
			"error",
			"tab"
		],
		"max-len": [
			"warn",
			{
				"code": 110
			}
		],
		"vue/html-indent": [
			"error",
			"tab"
		],
		"prefer-destructuring": [
			"warn"
		],
		"no-else-return": [
			"warn",
			{
				"allowElseIf": true
			}
		],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": false
			}
		],
		"vue/html-quotes": [
			"warn",
			"double",
			{
				"avoidEscape": false
			}
		]
	},
	"overrides": [
		{
			"files": [
				"**/__tests__/*.{j,t}s?(x)",
				"**/tests/unit/**/*.spec.{j,t}s?(x)"
			],
			"env": {
				"jest": true
			},
			"rules": {
				"import/no-unresolved": [
					"off"
				]
			}
		}
	]
}